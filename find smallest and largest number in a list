list = [2, 3, 4, 1, 54]

list.sort()

print("smallest no. :",list[0])
print("largest no, :",list[-1])

print("smallest no. :",min(list))
print("largest no. :",max(list))



##find 2nd largest no. in a list::::

list = [2, 4, 56, 34, 7]

list.sort()
print("2nd largest no. : ",list[-2])

new = set(list)
new.remove(max(new))
print(new)
print(max(new))
